{
  "name": "@4c/graphql-node-resource",
  "version": "1.0.0",
  "main": "lib/index.js",
  "modules": "es/index.js",
  "jsnext:main": "es/index.js",
  "repository": "https://github.com/4Catalyzer/graphql-server.git",
  "author": "4Catalyzer",
  "license": "MIT",
  "engines": {
    "node": ">= 8.3.0"
  },
  "scripts": {
    "build":
      "babel src -d lib --ignore __tests__ && BABEL_ENV=esm babel src --out-dir es --ignore __tests__",
    "check": "flow check",
    "tdd": "jest --watch",
    "test": "npm run lint && jest",
    "lint":
      "npm run check && eslint . && prettier --list-different --ignore-path .eslintignore '**/*.{json,css,md}'",
    "format":
      "eslint . --fix && prettier --write --ignore-path .eslintignore '**/*.{json,css,md}'",
    "precommit": "lint-staged"
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.{json,css,md}": [
      "prettier --write --ignore-path .eslintignore",
      "git add"
    ]
  },
  "devDependencies": {
    "@4c/babel-preset-4catalyzer": "^1.2.1",
    "@babel/cli": "^7.0.0-beta.40",
    "@babel/core": "^7.0.0-beta.40",
    "@babel/preset-flow": "^7.0.0-beta.40",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.1",
    "eslint": "^4.18.1",
    "eslint-config-4catalyzer-flow": "^0.3.3",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.12.2",
    "eslint-plugin-prettier": "^2.5.0",
    "fetch-mock": "^6.0.0",
    "flow-bin": "^0.66.0",
    "graphql": "^0.13.1",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "prettier": "^1.10.2"
  },
  "peerDependencies": {
    "graphql": ">=0.12.3"
  },
  "dependencies": {
    "dataloader": "^1.4.0",
    "express": "^4.16.2",
    "form-data": "^2.3.2",
    "graphql-relay": "^0.5.4",
    "invariant": "^2.2.3",
    "lodash": "^4.17.4",
    "node-fetch": "^2.0.0",
    "pluralize": "^7.0.0"
  }
}
