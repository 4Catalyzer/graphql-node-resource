{
  "name": "@4c/graphql-node-resource",
  "version": "0.5.0",
  "main": "lib/index.js",
  "modules": "es/index.js",
  "jsnext:main": "es/index.js",
  "repository": "https://github.com/4Catalyzer/graphql-server.git",
  "author": "4Catalyzer",
  "license": "MIT",
  "engines": {
    "node": ">= 8.3.0"
  },
  "scripts": {
    "build": "babel src -d lib --ignore __tests__ && BABEL_ENV=esm babel src --out-dir es --ignore __tests__ && npm run build:flow",
    "build:flow": "for file in $(find ./src -name '*.js' -not -path '*/__tests__*'); do cp \"$file\" `echo \"$file\" | sed 's/\\/src\\//\\/lib\\//g'`.flow; cp \"$file\" `echo \"$file\" | sed 's/\\/src\\//\\/es\\//g'`.flow; done",
    "check": "flow check",
    "tdd": "jest --watch",
    "test": "npm run lint && jest --coverage",
    "lint": "npm run check && eslint . && prettier --list-different --ignore-path .eslintignore '**/*.{json,css}'",
    "format": "eslint . --fix && prettier --write --ignore-path .eslintignore '**/*.{json,css,md}'",
    "precommit": "lint-staged",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "files": [
    "lib",
    "es"
  ],
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**"
    ]
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write --ignore-path .eslintignore",
      "git add"
    ]
  },
  "release": {
    "extends": [
      "@4c/semantic-release-config"
    ]
  },
  "devDependencies": {
    "@4c/babel-preset-4catalyzer": "^1.4.0",
    "@4c/semantic-release-config": "^1.0.2",
    "@babel/cli": "^7.0.0-beta.46",
    "@babel/core": "^7.0.0-beta.46",
    "@babel/preset-flow": "^7.0.0-beta.46",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.3",
    "codecov": "^3.0.1",
    "eslint": "^4.19.1",
    "eslint-config-4catalyzer-flow": "^0.4.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.46.3",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-prettier": "^2.5.0",
    "fetch-mock": "^6.3.0",
    "flow-bin": "^0.71.0",
    "graphql": "^0.13.2",
    "graphql-relay": "^0.5.5",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.5",
    "prettier": "^1.12.1",
    "semantic-release": "^15.1.8",
    "travis-deploy-once": "^4.4.1"
  },
  "peerDependencies": {
    "graphql": ">=0.12.3",
    "graphql-relay": "^0.5.4"
  },
  "dependencies": {
    "dataloader": "^1.4.0",
    "express": "^4.16.2",
    "form-data": "^2.3.2",
    "invariant": "^2.2.3",
    "lodash": "^4.17.4",
    "node-fetch": "^2.0.0",
    "pluralize": "^7.0.0"
  }
}
